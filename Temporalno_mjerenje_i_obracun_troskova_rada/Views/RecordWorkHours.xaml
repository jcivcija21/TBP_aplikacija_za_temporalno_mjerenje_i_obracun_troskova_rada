<UserControl x:Class="Temporalno_mjerenje_i_obracun_troskova_rada.Views.RecordWorkHours"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Temporalno_mjerenje_i_obracun_troskova_rada.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <DataGrid x:Name="WorkHoursDataGrid" AutoGenerateColumns="False" IsReadOnly="True" SelectionChanged="WorkHoursDataGrid_SelectionChanged">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding RadniSatiId}" Width="50"/>
                    <DataGridTextColumn Header="Employee ID" Binding="{Binding ZaposlenikId}" Width="100"/>
                    <DataGridTextColumn Header="Date" Binding="{Binding Datum}" Width="100"/>
                    <DataGridTextColumn Header="Hours" Binding="{Binding Sati}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">

                <Button Content="Add Work Hours" Click="AddWorkHours_Click" Margin="5"/>
                <Button Content="Edit Work Hours" Click="EditWorkHours_Click" Margin="5"/>
                <Button Content="Delete Work Hours" Click="DeleteWorkHours_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>       
    </Grid>
</UserControl>
