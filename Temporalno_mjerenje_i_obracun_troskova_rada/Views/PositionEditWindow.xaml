<Window x:Class="Temporalno_mjerenje_i_obracun_troskova_rada.Views.PositionEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Temporalno_mjerenje_i_obracun_troskova_rada.Views"
        mc:Ignorable="d"
        Title="PositionEditWindow" Height="350" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Position Name:" Margin="5"/>
            <TextBox x:Name="PositionNameTextBox" Margin="5"/>

            <TextBlock Text="Description:" Margin="5"/>
            <TextBox x:Name="PositionDescriptionTextBox" Margin="5"/>

            <TextBlock Text="Hourly Rate:" Margin="5"/>
            <TextBox x:Name="HourlyRateTextBox" Margin="5"/>

            <Button Content="Save" Width="80" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
