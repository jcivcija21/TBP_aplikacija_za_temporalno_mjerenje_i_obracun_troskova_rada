<UserControl x:Class="Temporalno_mjerenje_i_obracun_troskova_rada.Views.ManagePositions"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Temporalno_mjerenje_i_obracun_troskova_rada.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="PositionsDataGrid"
              AutoGenerateColumns="True"
              Margin="10" 
              Height="300"
              SelectionChanged="PositionsDataGrid_SelectionChanged"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Edit" Width="60" Margin="5" Click="EditPosition" />
            <Button Content="Delete" Width="90" Margin="5" Click="DeletePosition" />
            <Button Content="Add Position" Width="90" Margin="5" Click="AddPosition" />
        </StackPanel>
    </Grid>
</UserControl>
