<UserControl x:Class="Temporalno_mjerenje_i_obracun_troskova_rada.Views.ManageEmployees"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Temporalno_mjerenje_i_obracun_troskova_rada.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="EmployeesDataGrid"
                  AutoGenerateColumns="True"
                  Margin="10" 
                  Height="300"
                  SelectionChanged="EmployeesDataGrid_SelectionChanged"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10">
            <Button Content="Edit" Width="60" Margin="5" Click="EditEmployee" />
            <Button Content="Deactivate" Width="90" Margin="5" Click="DeactivateEmployee" />
            <Button Content="Add Employee" Width="90" Margin="5" Click="AddEmployee" />
        </StackPanel>
    </Grid>
</UserControl>
