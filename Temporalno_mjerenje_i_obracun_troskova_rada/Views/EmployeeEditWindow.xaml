<Window x:Class="Temporalno_mjerenje_i_obracun_troskova_rada.Views.EmployeeEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Temporalno_mjerenje_i_obracun_troskova_rada.Views"
        mc:Ignorable="d"
        Title="EmployeeEditWindow" Height="350" Width="300">
    <Grid>
        <StackPanel>
            <TextBlock Text="Name:" Margin="5"/>
            <TextBox x:Name="NameTextBox" Margin="5"/>
            <TextBlock Text="LastName:" Margin="5"/>
            <TextBox x:Name="LastNameTextBox" Margin="5"/>

            <TextBlock Text="OIB:" Margin="5"/>
            <TextBox x:Name="OibTextBox" Margin="5"/>

            <TextBlock Text="Employment Date:" Margin="5"/>
            <DatePicker x:Name="EmploymentDatePicker" Margin="5"/>

            <CheckBox x:Name="ActiveCheckBox" Content="Active" Margin="5"/>

            <Button Content="Save" Width="80" Margin="5" Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
